{
    "name": "webberdoo/installer-bundle",
    "description": "A reusable Symfony installer bundle with React and Tailwind CSS frontend. Installs Symfony database tables and admin user.",
    "type": "symfony-bundle",
    "keywords": ["symfony", "bundle", "installer", "react", "tailwind", "symfony-installer", "webberdoo-installer-bundle"],
    "license": "MIT",
    "authors": [
        {
            "name": "Freddie Annobil-Dodoo - Webberdoo",
            "email": "freddie@webberdoo.com"
        }
    ],
    "require": {
        "php": ">=8.2",
        "symfony/framework-bundle": "^7.0",
        "symfony/yaml": "^7.0",
        "symfony/password-hasher": "^7.0",
        "symfony/security-bundle": "^7.0",
        "doctrine/orm": "^3.0",
        "doctrine/dbal": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.40",
        "symfony/phpunit-bridge": "^7.0"
    },
    "scripts": {
        "test": "phpunit",
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "cs-fix": "php-cs-fixer fix",
        "phpstan": "phpstan analyse"
    },
    "autoload": {
        "psr-4": {
            "Webberdoo\\InstallerBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Webberdoo\\InstallerBundle\\Tests\\": "tests/"
        }
    },
    "extra": {
        "symfony": {
            "require": "^7.0"
        }
    }
}
